@model TheStoreFinal.Models.Store;


    <div class="row">
        <div class="col-8">
            <form method="post">
                <input asp-for="Id" hidden />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StoreName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StoreName" class="form-control" />
                        <span asp-validation-for="StoreName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Street"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Street" class="form-control" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="City"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="State"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Code"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Phone"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info" value="Update" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-4">
            <form method="post" asp-action="DeletePost">
                <input asp-for="Id" hidden />
                <div class="card">
                    <div class="card-header">
                        Danger Zone
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Irreversible and destructive actions</h5>
                        <p class="card-text">Once you delete the store, there is no going back! Pleace be certain!</p>
                        <input type="submit" class="btn btn-danger" value="Delete" />
                    </div>
                </div>
            </form>
        </div>
    </div>



@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
